<main>
  <% if !@notice.nil? %>
  <p id="notice"><%= @notice %></p>
  <% end %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <%= render "layouts/error_messages", resource: f.object %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, id:"user_name", class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="profile_image">Image</label>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction" %>
          </div>
          <%= link_to "", edit_user_path(@user.id), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
          <div class="form-group">
            <%= f.submit "Update User", class:"btn btn-secondary", data: { disable_with: "Update User" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>